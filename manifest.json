{
  "name": "Network AI Support Assistant",
  "description": "Your AI assistant in a persistent side panel",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs",
    "alarms",
    "storage"
  ],
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["src/content/content-script.js"],
    "run_at": "document_idle"
  }
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "icons": {
    "16": "icons/icons8-database-administrator-48.png"
  },
  "action": {
    "default_title": "N.A.S.A",
    "default_icon": {
      "16": "icons/icons8-database-administrator-48.png"
    },
      "default_popup": "homepage.html"
},
"side_panel": {
  "default_path": "src/sidepanel/sidepanel.html"
},
"background": {
  "service_worker": "src/background/service-worker.js",
  "type": "module"
}
}
