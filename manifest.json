{
  "name": "A.A.S.A",
  "description": "Your AI assistant in a persistent side panel",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "A.A.S.A",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
"side_panel": {
  "default_path": "src/sidepanel/sidepanel.html"
},
"background": {
  "service_worker": "src/background/service-worker.js",
  "type": "module"
}
}
